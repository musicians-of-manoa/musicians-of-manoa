generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // for local development
  url      = env("DATABASE_URL")
  // for Vercel
  // url       = env("POSTGRES_PRISMA_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(USER)
  Profile  Profile?
}

enum Experience {
  novice
  beginner
  intermediate
  professional
}

model JamInformation {
  id          Int        @id @default(autoincrement())
  owner       String
  jamName     String
  image       String
  organizer   String
  genre       String
  location    String
  date        DateTime
  instruments String
  experience  Experience
  description String
}

model Goals {
  id        Int    @id @default(autoincrement())
  goal      String
  isEditing Int    @default(0)
}

model Profile {
  id            Int        @id @default(autoincrement())
  userId        Int        @unique
  user          User       @relation(fields: [userId], references: [id])
  firstName     String
  lastName      String
  username      String     @unique
  image         String?
  rating        Int
  musicalGoals  String?
  musicalTastes String?
  instruments   String?
  experience    Experience
  description   String?
}

model Review {
  id      Int    @id @default(autoincrement())
  rating  Int
  comment String
  userID  Int
}

model Experiences {
  id            Int    @id @default(autoincrement())
  level         String
  description   String
  isEditing     Int    @default(0)
}